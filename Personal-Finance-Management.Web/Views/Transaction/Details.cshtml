@using Personal_Finance_Management.Domain.Enums
@model Transaction

<div class="card shadow border-0 w-100">
    <!-- Header -->
    <div class="card-header bg-success text-white text-center py-4 rounded-top">
        <h2 class="mb-0">
            <i class="bi bi-receipt-cutoff me-2"></i> Transaction Details
        </h2>
    </div>

    <!-- Body -->
    <div class="card-body p-4">
        <!-- Action Buttons -->
        <div class="d-flex justify-content-end mb-4 gap-2">
            <a asp-controller="Transaction" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-controller="Transaction" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                <i class="bi bi-trash-fill"></i> Delete
            </a>
        </div>

        <!-- Details Table -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th scope="row" style="width: 200px;">Transaction ID</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th scope="row">Category</th>
                        <td>
                            @Model.Category.Name
                            <span class="badge bg-light text-dark ms-2">@Model.Category.Type</span>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Description</th>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <th scope="row">Amount</th>
                        <td class="fw-semibold text-success">@Model.Amount.ToString("C")</td>
                    </tr>
                    <tr>
                        <th scope="row">Type</th>
                        <td>
                            @if (Model.Category.Type == CategoryType.Income)
                            {
                                <span class="badge bg-success"><i class="bi bi-arrow-down-circle"></i> Income</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="bi bi-arrow-up-circle"></i> Expense</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Created At</th>
                        <td>@Model.CreatedAt.ToString("dddd, dd MMMM yyyy")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Back Button -->
        <div class="text-end mt-3">
            <a asp-controller="Transaction" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>
</div>
