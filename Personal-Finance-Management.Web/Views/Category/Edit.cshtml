@model UpdateCategoryVM

<div class="card border-0 shadow p-4 w-100">
    <div class="card-header bg-success bg-gradient text-center py-3">
        <h2 class="text-white mb-0">Update Category</h2>
    </div>

    <div class="card-body border p-4">
        <form asp-controller="Category" asp-action="Update" method="post" class="row g-3">
            <input asp-for="Id" type="hidden" />

            <div class="col-md-8 offset-md-2">
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Category Name" />
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <select asp-for="Type" class="form-select shadow-sm" asp-items="Model.CategoryTypes">
                        <option value="">--- Select Category ---</option>
                    </select>
                    <label asp-for="Type">Type</label>
                    <span asp-validation-for="Type" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-4">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Update
                        </button>
                    </div>
                    <div class="col-6 col-md-4">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="mt-3">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
