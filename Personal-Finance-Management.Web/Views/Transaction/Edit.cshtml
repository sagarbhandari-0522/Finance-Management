@model UpdateTransactionVM;
<div class="w-100 card border-0 p-4">
    More actions
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" asp-controller="Transaction" asp-action="Update" class="row">
            <input asp-for="Id" hidden />
            <div class="col-10">
                <div class="p-3">
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Description" class="form-control border shadow" />
                        <label asp-for="Description" class="ms-2"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <select asp-for="CategoryId" class="form-control border shadow" asp-items="Model.CategoryList">
                            <option value="">---Select Category--- </option>
                        </select>
                        <label asp-for="CategoryId" class="ms-2"></label>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Amount" class="form-control border shadow" />
                        <label asp-for="Amount" class="ms-2"></label>
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-1 col-12">
                        <input asp-for="TransactionAt" class="form-control border shadow" />
                        <label asp-for="TransactionAt" class="ms-2">Transaction At</label>
                        <span asp-validation-for="TransactionAt" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-success w-100" asp-controller="Transaction" asp-action="Update">
                                <i class="bi bi-check-circle"></i> Update
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Transaction" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
                <partial name="_ValidationScriptsPartial" />
    }
}