@model Transaction;
<div class="w-100 card border-0 p-4">
    More actions
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Transaction</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" class="form-control border shadow" readonly />
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Amount" class="form-control border shadow" readonly />
                    <label asp-for="Amount" class="ms-2"></label>
                </div>


                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Category.Name" class="form-control border shadow" disabled />
                    <label asp-for="CategoryId" class="ms-2">Category</label>
                </div>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100" asp-controller="Transaction" asp-action="Delete">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Transaction" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}