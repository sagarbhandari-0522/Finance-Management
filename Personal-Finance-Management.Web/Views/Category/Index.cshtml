@using Personal_Finance_Management.Domain.Enums
@model List<Category>
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient py-4 text-center rounded-top shadow-sm">
        <h2 class="text-white mb-0">
            <i class="bi bi-tags-fill me-2"></i>Category List
        </h2>
    </div>
    <div class="card-body border mt-3">
        <div class="row mb-4 align-items-end">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-success text-center">
                    <tr>
                        <th> Name</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var obj in Model)
                        {
                            <tr>
                                <td>@obj.Name</td>
                                <td>
                                    @if (obj.Type == CategoryType.Income)
                                    {
                                        <span class="text-success"><i class="bi bi-arrow-down-circle-fill"></i> Income</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger"><i class="bi bi-arrow-up-circle-fill"></i> Expense</span>
                                    }


                                </td>

                                <td>

                                    <div class="d-flex flex-wrap gap-4 justify-content-center">
                                        <a asp-controller="Category" asp-action="Details" asp-route-Id="@obj.Id"
                                           class="btn btn-primary">
                                            <i class="bi bi-eye-fill"></i> View
                                        </a>
                                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id"
                                           class="btn btn-success">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id"
                                           class="btn btn-danger">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">
                                No transactions found for this category.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
