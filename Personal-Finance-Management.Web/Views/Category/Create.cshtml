@model CreateCategoryVM
<div class="w-100 card border-0 p-4">


    <div class="card-header bg-success bg-gradient ml-0 py-3">

        <div class="row">

            <div class="col-12 text-center">

                <h2 class="text-white py-2">  <i class="bi bi-tags-fill me-2"></i>Create Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" asp-controller="Category" asp-action="Create">

            <div class="row g-3">
                <div class="form-floating col-12">
                    <input asp-for="Name" class="form-control border shadow" />
                    <label asp-for="Name" ></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating col-12">
                    <select asp-for="Type" class="form-control border shadow" asp-items="Model.CategoryTypes">
                        <option value="">---Select Type--- </option>
                    </select>
                    <label asp-for="Type"></label>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="row pt-2 justify-content-start gap-2">
                    <div class="col-12 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-12 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="mt-3">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back
        </a>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}